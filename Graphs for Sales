import numpy as np
import pandas as pd
%matplotlib inline
import matplotlib.pyplot as plt

file_location = "C:/Users/gyteg/Desktop/DD & Python/Python 2025/Project II/Playstation Console Sales.xlsx "  # Reads Excel File
PS1_Sales = pd.read_excel(file_location, sheet_name = 'PS1 Sales', header = 2, usecols ='D:F')  #Imported PS1 Sales Yearly, have to use spreadsheet to navigate parse

fig,ax= plt.subplots(figsize = (10,5))
ax.bar(PS1_Sales['Year'], PS1_Sales['Yearly Sales'], color = 'skyblue', label = 'Yearly Sales')
ax.set_ylabel('Yearly Sales(Millions)', color = 'black')
ax.tick_params(axis = 'x', rotation = 45)
ax1=ax.twinx()                       # different y axis same x axis
ax1.plot(PS1_Sales['Year'], PS1_Sales['Cumulative' ], color ='black' ,  marker = 'o', linewidth = 2 , label = 'Yearly Sales')
ax1.set_ylabel('Cumulative Sales(Millions)', color = 'black')

file_location = "C:/Users/gyteg/Desktop/DD & Python/Python 2025/Project II/Playstation Console Sales.xlsx "  # Reads Excel File
PS2_Quarterly_Sales = pd.read_excel(file_location, sheet_name = 'PS2 Sales', header = 1, usecols ='B:E')    #PS2 Quarterly Sales
PS2_Quarterly_Sales['Period'] =  PS2_Quarterly_Sales['Quarter']   + ' '   +   PS2_Quarterly_Sales['Year'].astype(str)   # Created New Column for Graphing Purposes

fig2,ax3= plt.subplots(figsize = (10,5))
ax3.bar(PS2_Quarterly_Sales['Period'], PS2_Quarterly_Sales['Quarterly Sales'], color = 'skyblue', label = 'Quarterly Sales')
ax3.set_ylabel('Quarterly Sales(Millions)', color = 'black')
ax3.tick_params(axis = 'x', rotation = 45)

ax4=ax3.twinx()                       # different y axis same x axis
ax4.plot(PS2_Quarterly_Sales['Period'], PS2_Quarterly_Sales['Cumulative Sales' ], color ='black' ,  marker = 'o', linewidth = 2 , label = 'Cumulative Sales')
ax4.set_ylabel('Cumulative Sales(Millions)', color = 'black')


